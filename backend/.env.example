# =============================================================================
# AURA DIAGNOSTICS - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control - it contains secrets!

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database path (relative to backend directory)
DATABASE_URL=sqlite:///./aura.db

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# PubMed API settings
PUBMED_EMAIL=your-email@example.com
PUBMED_API_KEY=your_ncbi_api_key_here

# Rate limiting (requests per second)
PUBMED_RATE_LIMIT=3

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# OpenAI API settings (when we integrate AI models)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Alternative AI providers
# ANTHROPIC_API_KEY=your_anthropic_key_here
# GOOGLE_API_KEY=your_google_key_here

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================

# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=medical_cases

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=audit_trail.log

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT secret for authentication (generate a secure random string)
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# CORS settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development mode settings
DEBUG=True
RELOAD=True

# Mock services (set to True to use mock data instead of real APIs)
USE_MOCK_PUBMED=False
USE_MOCK_DRUG_SERVICE=False

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Server settings
HOST=0.0.0.0
PORT=8000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Cache settings
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Application monitoring
SENTRY_DSN=your_sentry_dsn_here

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_id_here

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Email service (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Cloud storage (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=aura-diagnostics-files
AWS_REGION=us-east-1

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_CASE_DATABASE=False
ENABLE_DRUG_INTERACTIONS=True
ENABLE_LITERATURE_SEARCH=True
ENABLE_AUDIT_LOGGING=True
ENABLE_PERFORMANCE_MONITORING=True

# =============================================================================
# MEDICAL DATABASE INTEGRATIONS
# =============================================================================

# DrugBank API (for comprehensive drug interaction data)
DRUGBANK_API_KEY=your_drugbank_api_key_here

# FDA API settings
FDA_API_KEY=your_fda_api_key_here

# UMLS API (for medical terminology)
UMLS_API_KEY=your_umls_api_key_here

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Database backup settings
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/path/to/backups

# =============================================================================
# COMPLIANCE & AUDIT
# =============================================================================

# HIPAA compliance settings
ENABLE_ENCRYPTION_AT_REST=True
ENABLE_AUDIT_TRAIL=True
DATA_RETENTION_DAYS=2555  # 7 years

# Audit settings
AUDIT_LOG_LEVEL=INFO
AUDIT_LOG_FILE=compliance_audit.log